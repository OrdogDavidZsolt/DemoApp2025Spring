@using DemoApp2025Spring.Shared

<EditForm Model="Konyv" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Szerző</label>
        <InputText @bind-Value="Konyv.Szerzo" class="form-control" />
        <ValidationMessage For="() => Konyv.Szerzo" />
    </div>
    <div class="mb-3">
        <label class="form-label">Cím</label>
        <InputText @bind-Value="Konyv.Cim" class="form-control" />
        <ValidationMessage For="() => Konyv.Cim" />
    </div>
    <div class="mb-3">
        <label class="form-label">Kiadó</label>
        <InputText @bind-Value="Konyv.Kiado" class="form-control" />
        <ValidationMessage For="() => Konyv.Kiado" />
    </div>
    <div class="mb-3">
        <label class="form-label">Kiadás éve</label>
        <InputDate @bind-Value="Konyv.KiadasEve" class="form-control" />
        <ValidationMessage For="() => Konyv.KiadasEve" />
    </div>

    <button type="submit" class="btn btn-primary">@ButtonText</button>
</EditForm>

@code {

    [Parameter]
    public Konyvek Konyv { get; set; }

    [Parameter]
    public Func<Task> OnValidSubmit { get; set; }

    [Parameter]
    public string ButtonText { get; set; }

}
