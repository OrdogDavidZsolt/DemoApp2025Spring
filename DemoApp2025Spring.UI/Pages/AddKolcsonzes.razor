@page "/kolcsonzes/add"
@using DemoApp2025Spring.Shared
@using DemoApp2025Spring.UI.Services
@inject IBorrowsService BorrowsService
@inject NavigationManager NavigationManager

<h3>Add borrow</h3>

<BorrowForm Kolcson="_kolcson" OnValidSubmit="AddBorrowAsync" ButtonText="Add borrow" />

@code {

    private Kolcsonzes _kolcson = new();

    private async Task AddBorrowAsync()
    {
        await BorrowsService.AddBorrowAsync(_kolcson);
        NavigationManager.NavigateTo("/kolcsonzes");
    }
}
